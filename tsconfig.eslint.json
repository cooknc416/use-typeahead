{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    ".storybook/**/*",
    "stories/**/*",
    "tests/**/*",
    "tsconfig.*",
    ".eslintrc.js",
    "jest.config.js",
    "rollup.config.js",
  ]
}